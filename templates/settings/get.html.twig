{% extends 'base.html.twig' %}

{% block title %}Hello SettingsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello!</h1>
    <h2>It's a GET controller for {{ service }}</h2>
    Field1: {{ settings.field1 | json_encode(constant('JSON_PRETTY_PRINT'))  }} <br>
    Field2: {{ settings.field2 | json_encode(constant('JSON_PRETTY_PRINT'))  }} <br>
    Field3: {{ settings.field3 | json_encode(constant('JSON_PRETTY_PRINT'))  }} <br>
</div>
{% endblock %}
